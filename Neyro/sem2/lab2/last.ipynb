import matplotlib.pyplot as plt
import numpy as np
import ipywidgets as widgets
from IPython.display import display
import random

class ColabCNNVisualizer:
    def __init__(self, model, x_val, y_val, y_val_onehot):
        self.model = model
        self.x_val = x_val
        self.y_val = y_val
        self.y_val_onehot = y_val_onehot
        self.current_idx = 0
        
        # –°–æ–∑–¥–∞–µ–º –≤–∏–¥–∂–µ—Ç—ã
        self.create_widgets()
        self.setup_layout()
        self.update_display()
    
    def create_widgets(self):
        """–°–æ–∑–¥–∞–Ω–∏–µ –∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω—ã—Ö –≤–∏–¥–∂–µ—Ç–æ–≤"""
        # –ö–Ω–æ–ø–∫–∏ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
        self.prev_btn = widgets.Button(description='‚Üê –ù–∞–∑–∞–¥', layout=widgets.Layout(width='100px'))
        self.next_btn = widgets.Button(description='–í–ø–µ—Ä–µ–¥ ‚Üí', layout=widgets.Layout(width='100px'))
        self.random_btn = widgets.Button(description='–°–ª—É—á–∞–π–Ω–∞—è', layout=widgets.Layout(width='100px'))
        
        # –ö–Ω–æ–ø–∫–∏ –∞–Ω–∞–ª–∏–∑–∞
        self.correct_btn = widgets.Button(description='–ü—Ä–∞–≤–∏–ª—å–Ω—ã–µ', layout=widgets.Layout(width='120px'))
        self.incorrect_btn = widgets.Button(description='–û—à–∏–±–∫–∏', layout=widgets.Layout(width='120px'))
        self.stats_btn = widgets.Button(description='–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞', layout=widgets.Layout(width='120px'))
        
        # –°–ª–∞–π–¥–µ—Ä
        self.slider = widgets.IntSlider(
            value=0,
            min=0,
            max=len(self.x_val)-1,
            step=1,
            description='–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ:',
            continuous_update=False,
            layout=widgets.Layout(width='400px')
        )
        
        # –¢–µ–∫—Å—Ç–æ–≤—ã–µ –ø–æ–ª—è –¥–ª—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏
        self.info_label = widgets.Label(value=f"–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ 1/{len(self.x_val)}")
        self.stats_label = widgets.Label(value="")
        
        # –ü–æ–¥–∫–ª—é—á–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏
        self.prev_btn.on_click(self.previous_image)
        self.next_btn.on_click(self.next_image)
        self.random_btn.on_click(self.random_image)
        self.correct_btn.on_click(self.show_correct)
        self.incorrect_btn.on_click(self.show_incorrect)
        self.stats_btn.on_click(self.show_statistics)
        self.slider.observe(self.slider_changed, names='value')
        
        # –í—ã—Ö–æ–¥–Ω—ã–µ –≤–∏–¥–∂–µ—Ç—ã –¥–ª—è –≥—Ä–∞—Ñ–∏–∫–æ–≤
        self.output = widgets.Output()
    
    def setup_layout(self):
        """–ù–∞—Å—Ç—Ä–æ–π–∫–∞ —Ä–∞—Å–ø–æ–ª–æ–∂–µ–Ω–∏—è –≤–∏–¥–∂–µ—Ç–æ–≤"""
        # –ü–µ—Ä–≤—ã–π —Ä—è–¥ - –Ω–∞–≤–∏–≥–∞—Ü–∏—è
        nav_buttons = widgets.HBox([self.prev_btn, self.next_btn, self.random_btn])
        
        # –í—Ç–æ—Ä–æ–π —Ä—è–¥ - –∞–Ω–∞–ª–∏–∑
        analysis_buttons = widgets.HBox([self.correct_btn, self.incorrect_btn, self.stats_btn])
        
        # –¢—Ä–µ—Ç–∏–π —Ä—è–¥ - —Å–ª–∞–π–¥–µ—Ä
        slider_row = widgets.HBox([self.slider])
        
        # –ß–µ—Ç–≤–µ—Ä—Ç—ã–π —Ä—è–¥ - –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è
        info_row = widgets.HBox([self.info_label, self.stats_label])
        
        # –û—Å–Ω–æ–≤–Ω–æ–π layout
        self.controls = widgets.VBox([
            nav_buttons,
            analysis_buttons,
            slider_row,
            info_row,
            self.output
        ])
    
    def display(self):
        """–û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞"""
        display(self.controls)
    
    def predict_current_image(self):
        """–ü—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–µ –¥–ª—è —Ç–µ–∫—É—â–µ–≥–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è"""
        image = self.x_val[self.current_idx]
        prediction = self.model.forward(image.reshape(1, 28, 28, 1))
        predicted_class = np.argmax(prediction)
        confidence = np.max(prediction)
        return prediction[0], predicted_class, confidence
    
    def update_display(self):
        """–û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è"""
        with self.output:
            self.output.clear_output(wait=True)
            
            # –ü–æ–ª—É—á–∞–µ–º –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–µ
            probabilities, predicted_class, confidence = self.predict_current_image()
            true_class = self.y_val[self.current_idx]
            
            # –°–æ–∑–¥–∞–µ–º –≥—Ä–∞—Ñ–∏–∫–∏
            fig, (ax1, ax2) = plt.subplots(1, 2, figsize=(15, 5))
            
            # 1. –ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ
            ax1.imshow(self.x_val[self.current_idx].squeeze(), cmap='gray')
            result_color = 'green' if predicted_class == true_class else 'red'
            result_text = '‚úì –ü–†–ê–í–ò–õ–¨–ù–û' if predicted_class == true_class else '‚úó –û–®–ò–ë–ö–ê'
            
            ax1.set_title(f'–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ {self.current_idx + 1}/{len(self.x_val)}\n'
                         f'–ò—Å—Ç–∏–Ω–∞: {true_class} | –ü—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–µ: {predicted_class}\n'
                         f'{result_text} | –£–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å: {confidence:.2%}',
                         color=result_color, fontweight='bold', fontsize=12)
            ax1.set_xticks([])
            ax1.set_yticks([])
            
            # 2. –ì—Ä–∞—Ñ–∏–∫ –≤–µ—Ä–æ—è—Ç–Ω–æ—Å—Ç–µ–π
            digits = list(range(10))
            colors = ['green' if i == predicted_class else 
                     'red' if i == true_class and i != predicted_class else 
                     'lightblue' for i in digits]
            
            bars = ax2.bar(digits, probabilities, color=colors, alpha=0.7)
            ax2.set_title('–í–µ—Ä–æ—è—Ç–Ω–æ—Å—Ç–∏ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è', fontweight='bold')
            ax2.set_xlabel('–¶–∏—Ñ—Ä–∞')
            ax2.set_ylabel('–í–µ—Ä–æ—è—Ç–Ω–æ—Å—Ç—å')
            ax2.set_ylim(0, 1)
            ax2.grid(True, alpha=0.3)
            ax2.set_xticks(digits)
            
            # –î–æ–±–∞–≤–ª—è–µ–º –∑–Ω–∞—á–µ–Ω–∏—è –Ω–∞ —Å—Ç–æ–ª–±—Ü—ã
            for bar, prob in zip(bars, probabilities):
                height = bar.get_height()
                if height > 0.05:
                    ax2.text(bar.get_x() + bar.get_width()/2., height + 0.01,
                            f'{prob:.1%}', ha='center', va='bottom', fontsize=8)
            
            plt.tight_layout()
            plt.show()
            
            # –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é
            self.info_label.value = f"–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ {self.current_idx + 1}/{len(self.x_val)}"
            self.stats_label.value = f"–†–µ–∑—É–ª—å—Ç–∞—Ç: {result_text} | –£–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å: {confidence:.2%}"
            
            # –û–±–Ω–æ–≤–ª—è–µ–º —Å–ª–∞–π–¥–µ—Ä
            self.slider.value = self.current_idx
    
    def next_image(self, btn):
        self.current_idx = (self.current_idx + 1) % len(self.x_val)
        self.update_display()
    
    def previous_image(self, btn):
        self.current_idx = (self.current_idx - 1) % len(self.x_val)
        self.update_display()
    
    def random_image(self, btn):
        self.current_idx = random.randint(0, len(self.x_val) - 1)
        self.update_display()
    
    def slider_changed(self, change):
        self.current_idx = change['new']
        self.update_display()
    
    def show_correct(self, btn):
        print("–ü–æ–∏—Å–∫ –ø—Ä–∞–≤–∏–ª—å–Ω—ã—Ö –∫–ª–∞—Å—Å–∏—Ñ–∏–∫–∞—Ü–∏–π...")
        correct_indices = self.find_correct_predictions()
        if correct_indices:
            self.current_idx = random.choice(correct_indices)
            self.update_display()
            print(f"–ù–∞–π–¥–µ–Ω–æ {len(correct_indices)} –ø—Ä–∞–≤–∏–ª—å–Ω—ã—Ö –∫–ª–∞—Å—Å–∏—Ñ–∏–∫–∞—Ü–∏–π")
    
    def show_incorrect(self, btn):
        print("–ü–æ–∏—Å–∫ –æ—à–∏–±–æ–∫ –∫–ª–∞—Å—Å–∏—Ñ–∏–∫–∞—Ü–∏–∏...")
        incorrect_indices = self.find_incorrect_predictions()
        if incorrect_indices:
            self.current_idx = random.choice(incorrect_indices)
            self.update_display()
            print(f"–ù–∞–π–¥–µ–Ω–æ {len(incorrect_indices)} –æ—à–∏–±–æ–∫ –∫–ª–∞—Å—Å–∏—Ñ–∏–∫–∞—Ü–∏–∏")
    
    def find_correct_predictions(self, limit=50):
        correct_indices = []
        for i in range(min(limit, len(self.x_val))):
            prediction = self.model.forward(self.x_val[i].reshape(1, 28, 28, 1))
            predicted_class = np.argmax(prediction)
            if predicted_class == self.y_val[i]:
                correct_indices.append(i)
        return correct_indices
    
    def find_incorrect_predictions(self, limit=50):
        incorrect_indices = []
        for i in range(min(limit, len(self.x_val))):
            prediction = self.model.forward(self.x_val[i].reshape(1, 28, 28, 1))
            predicted_class = np.argmax(prediction)
            if predicted_class != self.y_val[i]:
                incorrect_indices.append(i)
        return incorrect_indices
    
    def show_statistics(self, btn):
        self.show_comprehensive_statistics()
    
    def show_comprehensive_statistics(self):
        """–†–∞—Å—à–∏—Ä–µ–Ω–Ω–∞—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞"""
        correct = 0
        total_confidences = []
        confusion = np.zeros((10, 10), dtype=int)
        
        check_limit = min(100, len(self.x_val))
        
        for i in range(check_limit):
            prediction = self.model.forward(self.x_val[i].reshape(1, 28, 28, 1))
            predicted_class = np.argmax(prediction)
            true_class = self.y_val[i]
            
            if predicted_class == true_class:
                correct += 1
                total_confidences.append(np.max(prediction))
            
            confusion[true_class, predicted_class] += 1
        
        accuracy = correct / check_limit
        
        # –°–æ–∑–¥–∞–µ–º –Ω–æ–≤–æ–µ –æ–∫–Ω–æ —Å–æ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–æ–π
        with self.output:
            self.output.clear_output(wait=True)
            
            fig, ((ax1, ax2), (ax3, ax4)) = plt.subplots(2, 2, figsize=(12, 8))
            fig.suptitle(f'–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –∫–ª–∞—Å—Å–∏—Ñ–∏–∫–∞—Ü–∏–∏ (–ø–µ—Ä–≤—ã–µ {check_limit} –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π)', 
                        fontsize=16, fontweight='bold')
            
            # 1. –û–±—â–∞—è —Ç–æ—á–Ω–æ—Å—Ç—å
            metrics = ['–ü—Ä–∞–≤–∏–ª—å–Ω–æ', '–û—à–∏–±–∫–∏']
            values = [correct, check_limit - correct]
            colors = ['#2ecc71', '#e74c3c']
            
            bars = ax1.bar(metrics, values, color=colors, alpha=0.7)
            ax1.set_title(f'–û–±—â–∞—è —Ç–æ—á–Ω–æ—Å—Ç—å: {accuracy:.2%}', fontweight='bold')
            ax1.set_ylabel('–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π')
            
            for bar, value in zip(bars, values):
                height = bar.get_height()
                ax1.text(bar.get_x() + bar.get_width()/2., height + 0.1,
                        f'{value}', ha='center', va='bottom', fontweight='bold')
            
            # 2. –ú–∞—Ç—Ä–∏—Ü–∞ –æ—à–∏–±–æ–∫
            im = ax2.imshow(confusion, cmap='Blues', interpolation='nearest')
            ax2.set_title('–ú–∞—Ç—Ä–∏—Ü–∞ –æ—à–∏–±–æ–∫', fontweight='bold')
            ax2.set_xlabel('–ü—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–Ω—ã–π –∫–ª–∞—Å—Å')
            ax2.set_ylabel('–ò—Å—Ç–∏–Ω–Ω—ã–π –∫–ª–∞—Å—Å')
            ax2.set_xticks(range(10))
            ax2.set_yticks(range(10))
            
            for i in range(10):
                for j in range(10):
                    color = 'white' if confusion[i, j] > confusion.max()/2 else 'black'
                    ax2.text(j, i, str(confusion[i, j]), ha='center', va='center',
                            color=color, fontweight='bold' if i == j else 'normal')
            
            # 3. –†–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —É–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç–∏
            if total_confidences:
                ax3.hist(total_confidences, bins=15, alpha=0.7, color='#3498db', edgecolor='black')
                ax3.set_title('–£–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å –¥–ª—è –ø—Ä–∞–≤–∏–ª—å–Ω—ã—Ö –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π', fontweight='bold')
                ax3.set_xlabel('–£–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å')
                ax3.set_ylabel('–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ')
                ax3.grid(True, alpha=0.3)
            
            # 4. –¢–æ—á–Ω–æ—Å—Ç—å –ø–æ –∫–ª–∞—Å—Å–∞–º
            class_accuracy = []
            for i in range(10):
                total = np.sum(confusion[i, :])
                correct_class = confusion[i, i]
                class_accuracy.append(correct_class / total if total > 0 else 0)
            
            bars = ax4.bar(range(10), class_accuracy, color='#f39c12', alpha=0.7, edgecolor='black')
            ax4.set_title('–¢–æ—á–Ω–æ—Å—Ç—å –ø–æ –∫–ª–∞—Å—Å–∞–º', fontweight='bold')
            ax4.set_xlabel('–¶–∏—Ñ—Ä–∞')
            ax4.set_ylabel('–¢–æ—á–Ω–æ—Å—Ç—å')
            ax4.set_ylim(0, 1)
            ax4.grid(True, alpha=0.3)
            ax4.set_xticks(range(10))
            
            for bar, acc in zip(bars, class_accuracy):
                height = bar.get_height()
                ax4.text(bar.get_x() + bar.get_width()/2., height + 0.01,
                        f'{acc:.1%}', ha='center', va='bottom', fontsize=9, fontweight='bold')
            
            plt.tight_layout()
            plt.show()

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∑–∞–ø—É—Å–∫–∞
def launch_colab_visualizer(model, x_val, y_val, y_val_onehot):
    """–ó–∞–ø—É—Å–∫ –≤–∏–∑—É–∞–ª–∏–∑–∞—Ç–æ—Ä–∞ –¥–ª—è Google Colab"""
    print("üöÄ –ó–∞–ø—É—Å–∫ Colab-—Å–æ–≤–º–µ—Å—Ç–∏–º–æ–≥–æ –≤–∏–∑—É–∞–ª–∏–∑–∞—Ç–æ—Ä–∞...")
    print(f"üìä –†–∞–∑–º–µ—Ä –≤—ã–±–æ—Ä–∫–∏: {len(x_val)} –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π")
    
    visualizer = ColabCNNVisualizer(model, x_val, y_val, y_val_onehot)
    visualizer.display()
    
    return visualizer

